# Docker Compose Configuration
HOST_PORT=8080
WORKSPACE=/home/sandbox/workspace
SUPERVISOR_CONF_DIR=/home/sandbox/app.supervisor.d
USERDATA_DIR=/home/sandbox/userdata
TZ=Asia/Shanghai

# Local volume mappings
LOCAL_WORKSPACE=./docker/volumes/workspace
LOCAL_SUPERVISOR_CONF=./docker/volumes/app.supervisor.d
LOCAL_USERDATA=./docker/volumes/userdata
LOCAL_INIT_SCRIPTS=./docker/volumes/init.d

# Feature flags
ENABLE_MCP=true
ENABLE_BROWSER=true
ENABLE_VNC=true

# Application service port (for user apps running inside sandbox)
APP_SERVICE_PORT=9000

# JWT authentication (optional, leave empty to disable)
# JWT_SECRET: HMAC shared secret for HS256/384/512 signing
# JWT_AUTH_REQUIRED: set to "true" to reject all requests when JWT_SECRET is not configured
JWT_SECRET=
JWT_AUTH_REQUIRED=
